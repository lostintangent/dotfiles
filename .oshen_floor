# ============================================
# Oshen Floor Configuration
# ============================================

# Homebrew paths
export HOMEBREW_PREFIX="/opt/homebrew"
export HOMEBREW_CELLAR="/opt/homebrew/Cellar"
export HOMEBREW_REPOSITORY="/opt/homebrew"

# NVM configuration
export NVM_DIR="$HOME/.nvm"

# Omnara configuration
export OMNARA_INSTALL="$HOME/.omnara"

# PATH configuration
# Only add directories that exist
PATH_DIRS=(
  "$OMNARA_INSTALL/bin"
  "/opt/homebrew/bin"
  "/opt/homebrew/sbin"
  "$NVM_DIR/versions/node/v22.17.1/bin"
)

for dir in "${PATH_DIRS[@]}"; do
  if [[ -d "$dir" ]]; then
    path PATH "$dir"
  fi
done

# Aliases
alias cls=clear